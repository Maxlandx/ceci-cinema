<form method="post" action="{{ path('role_delete', {'film': role.film}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.film) }}">
    <button class="btn">Delete</button>
</form>
